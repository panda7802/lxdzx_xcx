<!--pages/my/my.wxml-->
<view class="page_container" style="align-items: center;">


    <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}"
           background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>


    <view style="width: 100%; flex-direction: row;  display: flex;margin-top: 60rpx">
        <button class="my_menu" bindtap="click_play_rec">
            <image class="my_img" src="../../img/my/play_rec.png"/>
            <text class="my_txt">播放记录</text>
        </button>
        <button class="my_menu" bindtap="click_favourite">
            <image class="my_img" src="../../img/my/favourite.png"/>
            <text class="my_txt">我的收藏</text>
        </button>
        <button class="my_menu" bindtap="click_about">
            <image class="my_img" src="../../img/my/about.png"/>
            <view class="my_txt">关于我们</view>
        </button>
    </view>

    <view style="width: 100%; flex-direction: row;  display: flex;margin-top: 50rpx">
        <button class="my_menu" bindtap="click_notice">
            <image class="my_img" src="../../img/my/notice.png"/>
            <text class="my_txt">站内公告</text>
        </button>
        <button class="my_menu" open-type="share">
            <image class="my_img" src="../../img/my/share.png"/>
            <text class="my_txt">邀请好友</text>
        </button>
        <button class="my_menu" open-type="contact">
            <image class="my_img" src="../../img/my/kf.png"/>
            <text class="my_txt">在线客服</text>
        </button>
        <!--<button open-type="contact">dddddddd</button>-->
    </view>


</view>